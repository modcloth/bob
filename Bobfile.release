---
version: 1

docker:
  tag_opts: ["--force"]

container:
- name: app
  Dockerfile: Dockerfile
  registry: quay.io/rafecolton
  project: docker-builder
  tags: ["latest"]
  skip_push: true
- name: app
  Dockerfile: Dockerfile.squash
  registry: quay.io/rafecolton
  project: docker-builder
  squash: true
  tags: ["{{ tag }}"]

